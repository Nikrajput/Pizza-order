<section class="cart">
    <% if(!session.cart){ %> 
        <div class="empty-cart py-16">
            <div class="container mx-auto text-center">
                <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜Œ</h1>
                <p class="text-gray-500 text-lg mb-12 ">You probably haven't ordered a pizza yet.<br>
                    To order a pizza, go to the main page.
                </p>
                <img class="w-2/5 mx-auto" src="/img/empty-cart.png">
                <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12 mb-12">Go Back</a>
            </div>
        </div>
    <% } else{ %> 
        <div class="order container mx-auto xl:w-1/2 py-16">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="/img/cart-black.png">
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>
            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)){ %> 
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= pizza.item.image %>">
                        <div class="flex-1 ml-4">
                            <h1><%= pizza.item.name %></h1>
                            <span class="uppercase"><%= pizza.item.size %></span>
                        </div>
                        <span class="flex-1"><%= pizza.qty %> Pcs</span>
                        <span class="font-bold text-lg">â‚¹<%= pizza.item.price * pizza.qty %></span>
                    </div>
                <% } %> 
            </div>
            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice  %></span>
                </div>
                <div>
                    <% if(user){ %> 
                        <form action="/user/orders" method="POST" class="mt-8">
                            <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="phone number">
                            <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="address">
                            <div>
                                <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary" type="submit">Order Now</button>
                            </div>
                        </form>
                    <% } else{ %> 
                            <div>
                                <a class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-4" href="/user/login">Login to continue</a>
                            </div>
                    <% } %> 
                </div>
            </div>
        </div>
    <% } %> 
</section>